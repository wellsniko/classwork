<h1>Edit your Cat</h1>


<form action = "<%= cat_url(@cat)%>" method = "POST"> 
    <input type = "hidden" name = "_method" value = "PATCH">
    <label>Birthday 
    <input 
        type="date"
        name = "cat[birth_date]"
        value = "<%= @cat.birth_date%>"> 
    </label>

    <label>Color 
    <select name = "cat[color]" > 
        <option disabled selected> Select a color</option>
        <option value = "black">Black</option>
        <option value = "orange">Orange</option>
        <option value = "grey">Grey</option>
        <option value = "white">White</option>
        <option value = "multi-colored">Multi-Colored</option>
        <option value = "naked">Naked</option>
        
    </select> 
    </label>

    <label>Name
    <input 
        type="text"
        name = "cat[name]"
        value = "<% @cat.name%>"> 
    </label>

    <label>Sex
    <input type="radio" id = "male" name = "cat[sex]" value = "M">
    <label for = "male">Male</label>
    <input type="radio" id = "female" name = "cat[sex]" value = "F">
    <label for = "female">Female</label>
    </label>
    
    <input type= "submit"
        value = "Submit changes">
</form>